<configuration>
    <!--
      In OracleDataSync.java, we set "log.policy" and "log.maxFileSize" as system properties
      from the config.properties file. This allows logback to dynamically choose the logging strategy.
    -->
    <property name="LOG_PATH" value="logs"/>
    <property name="LOG_FILE" value="app.log"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Date-based Rolling Appender (Policy: "date") -->
    <appender name="FILE_DATE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE}</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- Purely Size-based Rolling Appender (Policy: "size") -->
    <appender name="FILE_SIZE_ONLY" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE}</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${LOG_PATH}/app.%i.log</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>1</maxIndex> <!-- Keeps only one backup file (app.1.log) -->
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>${log.maxFileSize}</maxFileSize>
        </triggeringPolicy>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <if condition='property("log.policy").equalsIgnoreCase("size")'>
            <then>
                <appender-ref ref="FILE_SIZE_ONLY"/>
            </then>
            <else>
                <appender-ref ref="FILE_DATE"/>
            </else>
        </if>
    </root>

</configuration>
